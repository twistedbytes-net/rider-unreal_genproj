<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->

<!-- `url` specifies the URL of the plugin homepage (can be opened from "Plugins" settings dialog) -->
<idea-plugin url="https://github.com/twistedbytes-net/rider-unreal_genproj#readme">
    <id>net.twistedbytes.rider.plugins.unreal_genproj</id>

    <!--suppress PluginXmlCapitalization -->
    <name>Unreal GenProj</name>

    <vendor
            email="support@twistedbytes.net"
            url="https://twistedbytes.net"
    >
        TwistedBytes.net
    </vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action
                id="net.twistedbytes.rider.plugins.unreal_genproj.actions.generateProjectFiles"
                class="net.twistedbytes.rider.plugins.unreal_genproj.actions.GenerateProjectFiles"
                description="Generate Visual Studio project files for UE project"
                text="Generate Visual Studio project files for UE project"
                icon="net.twistedbytes.rider.plugins.unreal_genproj.utils.PluginIcons.ActionGenerateProjectFiles"
        >
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <add-to-group group-id="NavBarToolBar" anchor="first"/>
            <add-to-group group-id="RightToolbarSideGroup" anchor="first"/>
        </action>
    </actions>

</idea-plugin>
